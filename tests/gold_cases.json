{
  "metadata": {
    "version": "1.0",
    "description": "Gold test cases for ExplainFutures NLP extraction pipeline",
    "created": "2026-01-01",
    "phases": "Covers Phase 1 & Phase 2 features"
  },
  "test_cases": [
    {
      "id": "basic_percent_increase",
      "description": "Simple percentage increase with year",
      "text": "GDP increases by 20% by 2040.",
      "expected": {
        "num_scenarios": 1,
        "scenarios": [
          {
            "title": null,
            "horizon": 2040,
            "items": [
              {
                "parameter": "GDP",
                "direction": "increase",
                "value": 20.0,
                "unit": "%",
                "value_type": "delta",
                "target_year": 2040,
                "baseline_year": null,
                "is_range": false,
                "is_rate": false
              }
            ]
          }
        ]
      }
    },
    {
      "id": "multiple_params_same_year",
      "description": "Multiple parameters with same target year",
      "text": "Scenario 1: Green Growth (by 2050)\nGDP increases by 25%.\nCO2 emissions decrease by 40%.\nRenewable energy reaches 70%.",
      "expected": {
        "num_scenarios": 1,
        "scenarios": [
          {
            "title": "Green Growth",
            "horizon": 2050,
            "items": [
              {
                "parameter": "GDP",
                "direction": "increase",
                "value": 25.0,
                "unit": "%",
                "value_type": "delta",
                "target_year": 2050
              },
              {
                "parameter": "CO2 emissions",
                "direction": "decrease",
                "value": 40.0,
                "unit": "%",
                "value_type": "delta",
                "target_year": 2050
              },
              {
                "parameter": "Renewable energy",
                "direction": "target",
                "value": 70.0,
                "unit": "%",
                "value_type": "absolute_target",
                "target_year": 2050
              }
            ]
          }
        ]
      }
    },
    {
      "id": "time_range",
      "description": "Time range from-to",
      "text": "GDP grows from 10% to 25% from 2030 to 2050.",
      "expected": {
        "num_scenarios": 1,
        "scenarios": [
          {
            "items": [
              {
                "parameter": "GDP",
                "direction": "increase",
                "value": 15.0,
                "unit": "%",
